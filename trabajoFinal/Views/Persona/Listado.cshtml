@model IEnumerable<trabajoFinal.Models.Persona>

@{
    ViewBag.Title = "Listado";
}
<h2>Listado</h2>

<p>
    @Html.ActionLink("Crear persona", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Rut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { rut = item.Rut }) |
                @Html.ActionLink("Detalle", "Details", new { rut = item.Rut }) |
                @Html.ActionLink("Eliminar", "Delete", new { rut = item.Rut })
            </td>
        </tr>
    }

</table>
